@model proje_mvc.Models.GorevModel


@{
    ViewData["Title"] = "Görev Ekle";
}


<h2>@ViewData["Title"]</h2>

<form asp-action="gorev_ekle" method="post">
    <div class="form-group">

        <label for="personel_id">Personel Id</label>
        <textarea asp-for="personel_id" class="personel_id"></textarea>
    </div>

    <div class="form-group">
        <label for="ad">Ad</label>
        <input type="text" class="form-control" id="ad" name="Ad" />
    </div>
    <div class="form-group">
        <label for="soyad">Soyad</label>
        <input type="text" class="form-control" id="soyad" name="Soyad" />
    </div>

    <div class="form-group">
        <label for="gorev_adi">Görev Adı</label>
        <input asp-for="gorev_adi" class="form-control" />
    </div>

    <div class="form-group">
        <label for="gorev__baslangıc_tarihi">Görev Başlangıç Tarihi</label>
        <input asp-for="gorev_baslangic_tarihi" type="date" class="form-control" />
    </div>

    <div class="form-group">
        <label for="gorev_aciklama"> Görev Açıklama</label>
        <input asp-for="gorev_aciklama" class="form-control" />
    </div>

   

    <button type="submit" class="btn btn-primary">Görevi Ekle</button>
</form>
