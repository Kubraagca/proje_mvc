@model proje_mvc.Models.IzinModel


@{
    ViewData["Title"] = "İzin Ekle";
}


<h2>@ViewData["Title"]</h2>

<form method="post">
    <div class="form-group">
        <label for="personel_id">Personel ID</label>
        <input type="text" class="form-control" id="personel_id" name="personel_id" value="@Model.personel_id" required />
    </div>
    <div class="form-group">
        <label for="ad">Ad</label>
        <input type="text" class="form-control" id="ad" name="Ad" />
    </div>
    <div class="form-group">
        <label for="soyad">Soyad</label>
        <input type="text" class="form-control" id="soyad" name="Soyad" />
    </div>

    <div class="form-group">
        <label for="izin_baslangic_tarihi">İzin Başlangıç Tarihi</label>
        <input type="date" class="form-control" id="izin_baslangic_tarihi" name="izin_baslangic_tarihi" value="@Model.izin_baslangic_tarihi" required />
    </div>
    <div class="form-group">
        <label for="izin_bitis_tarihi">İzin Bitiş Tarihi</label>
        <input type="date" class="form-control" id="izin_bitis_tarihi" name="izin_bitis_tarihi" value="@Model.izin_bitis_tarihi" required />
    </div>
    <div class="form-group">
        <label for="izin_turu">İzin Türü</label>
        <select class="form-control" id="izin_turu" name="izin_turu" required>
            <option value="1">Yıllık İzin</option>
            <option value="2">Hastalık İzni</option>
            <option value="3">Ücretli İzin</option>
            <option value="4">Babalık İzni</option>
            <option value="5">Doğum İzni</option>
        </select>
    </div>
    <div class="form-group">
        <label for="izin_aciklama">İzin Açıklama</label>
        <input type="text" class="form-control" id="izin_aciklama" name="izin_aciklama" value="@Model.izin_aciklama" required />
    </div>
    <div class="form-group">
        <label for="kurum_id">Kurum Id</label>
        <input type="text" class="form-control" id="kurum_id" name="kurum_id" value="@Model.kurum_id" required />
    </div>
    <button type="submit" class="btn btn-primary">Ekle</button>
</form>

