@model proje_mvc.Models.IzinModel


@{
    ViewData["Title"] = "İzin Güncelle";
}


<form method="post" action="/İzin/Guncelle">
    <div class="form-group">
        <label for="personelId">Personel ID</label>
        <input type="text" class="form-control" id="personelId" name="PersonelId" required />
    </div>
    <div class="form-group">
        <label for="ad">Ad</label>
        <input type="text" class="form-control" id="ad" name="Ad" />
    </div>
    <div class="form-group">
        <label for="soyad">Soyad</label>
        <input type="text" class="form-control" id="soyad" name="Soyad" />
    </div>
    <div class="form-group">
        <label for="IzinTuru">İzin Türü</label>
        <select class="form-control" id="IzinTuru" name="IzinTuru" required>
            <option value="1">Yıllık İzin</option>
            <option value="2">Hastalık İzni</option>
            <option value="3">Ücretli İzin</option>
            <option value="4">Babalık İzni</option>
            <option value="5">Doğum İzni</option>

        </select>
    </div>
 
    <div class="form-group">
        <label for="IzınBaslangicTarihi">İzin Başlangıç Tarihi</label>
        <input type="date" class="form-control" id="IzınBaslangicTarihi" name="IzınBaslangicTarihi" value="@Model.izin_baslangic_tarihi" required />
    </div>

    <div class="form-group">
        <label for="IzınBitisTarihi">İzin Bitiş Tarihi</label>
        <input type="date" class="form-control" id="IzınBitisTarihi" name="IzınBitisTarihi" value="@Model.izin_bitis_tarihi" required />
    </div>
    <button type="submit" class="btn btn-primary">Güncelle</button>
</form>
