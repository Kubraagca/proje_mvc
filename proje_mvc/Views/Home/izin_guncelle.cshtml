@model proje_mvc.Models.IzinModel

@{
    ViewData["Title"] = "İzin Güncelle";
}

<h2>İzin Güncelle</h2>

<form asp-action="izin_guncelle" asp-controller="Home" method="post">
    <input type="hidden" name="izin_id" value="@Model.izin_id" />

    <div>
        <label>Personel ID</label>
        <input type="number" name="personel_id" value="@Model.personel_id" class="form-control" />
    </div>
    <div>
        <label>Ad</label>
        <input type="text" name="ad" value="@Model.ad" class="form-control" />
    </div>
    <div>
        <label>Soyad</label>
        <input type="text" name="soyad" value="@Model.soyad" class="form-control" />
    </div>
    <div>
        <label>İzin Türü</label>
        <input type="text" name="izin_turu" value="@Model.izin_turu" class="form-control" />
    </div>
    <div>
        <label>İzin Açıklama</label>
        <textarea name="izin_aciklama" class="form-control">@Model.izin_aciklama</textarea>
    </div>
    <div>
        <label>Başlangıç Tarihi</label>
        <input type="date" name="izin_baslangic_tarihi" value="@Model.izin_baslangic_tarihi?.ToString("yyyy-MM-dd")" class="form-control" />
    </div>
    <div>
        <label>Bitiş Tarihi</label>
        <input type="date" name="izin_bitis_tarihi" value="@Model.izin_bitis_tarihi?.ToString("yyyy-MM-dd")" class="form-control" />
    </div>
    <div>
        <label>Kurum ID</label>
        <input type="text" name="kurum_id" value="@Model.kurum_id" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary">Kaydet</button>
</form>
