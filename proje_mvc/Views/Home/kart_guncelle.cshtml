@model IzinModel

<h2>İzin Güncelle</h2>

<form method="post" asp-action="guncelle_izin">
    <input type="hidden" asp-for="izin_id" />

    <div class="form-group">
        <label for="personel_id">Personel ID</label>
        <input type="text" class="form-control" asp-for="personel_id" readonly />
    </div>

    <div class="form-group">
        <label for="izin_baslangic_tarihi">İzin Başlangıç Tarihi</label>
        <input type="date" class="form-control" asp-for="izin_baslangic_tarihi" required />
    </div>

    <div class="form-group">
        <label for="izin_bitis_tarihi">İzin Bitiş Tarihi</label>
        <input type="date" class="form-control" asp-for="izin_bitis_tarihi" required />
    </div>

    <div class="form-group">
        <label for="izin_turu">İzin Türü</label>
        <select class="form-control" asp-for="izin_turu" required>
            <option value="Yıllık İzin">Yıllık İzin</option>
            <option value="Hastalık İzni">Hastalık İzni</option>
            <option value="Ücretli İzin">Ücretli İzin</option>
            <option value="Babalık İzni">Babalık İzni</option>
            <option value="Doğum İzni">Doğum İzni</option>
        </select>
    </div>

    <div class="form-group">
        <label for="izin_aciklama">İzin Açıklama</label>
        <input type="text" class="form-control" asp-for="izin_aciklama" required />
    </div>

    <div class="form-group">
        <label for="kurum_id">Kurum ID</label>
        <input type="text" class="form-control" asp-for="kurum_id" readonly />
    </div>

    <button type="submit" class="btn btn-primary">Güncelle</button>
</form>
