@model proje_mvc.Models.KartModel

<form asp-action="kart_guncelle" method="post">
    <input type="hidden" name="kart_id" value="@Model.kart_id" />

    <div>
        <label>Kurum ID</label>
        <input type="text" name="kurum_id" value="@Model.kurum_id" />
    </div>

    <div>
        <label>Personel ID</label>
        <input type="text" name="personel_id" value="@Model.personel_id" />
    </div>

    <div>
        <label>Kayıt Tarihi</label>
        <input type="date" name="kayit_tarihi" value="@Model.kayit_tarihi.ToString("yyyy-MM-dd")" />
    </div>

    <button type="submit">Güncelle</button>
</form>
