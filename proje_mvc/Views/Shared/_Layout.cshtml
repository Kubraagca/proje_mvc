<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Personel Yönetimi</title>

    <!-- Bootstrap CSS ve JS -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/css/bootstrap.min.css">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>

    <!-- jQuery ve Chart.js -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

    <!-- FullCalendar -->
    <link href="https://cdn.jsdelivr.net/npm/fullcalendar@3.2.0/dist/fullcalendar.min.css" rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/npm/fullcalendar@3.2.0/dist/fullcalendar.min.js"></script>

    <style>
        body {
            background-color: #f0f2f5;
            font-family: 'Arial', sans-serif;
            color: #333;
            padding-top: 75px; /* Navbar yüksekliği kadar boşluk bırakıldı */
        }

        .navbar {
            background-color: #4a4e69;
        }

        .navbar-brand {
            font-size: 1.75rem;
            color: #ffffff;
        }

        .navbar-nav .nav-link {
            color: #ffffff;
            transition: background-color 0.3s;
        }

            .navbar-nav .nav-link:hover {
                background-color: #9a8c98;
                color: #ffffff;
            }

        .container {
            margin-top: 30px;
        }

        footer {
            background-color: #4a4e69;
            color: white;
            text-align: center;
            padding: 15px;
            margin-top: 50px;
            width: 100%;
        }
    </style>
</head>
<body>

    <!-- Sabit Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark fixed-top">
        <div class="container-fluid">
            <a class="navbar-brand" href="#">Yönetim Paneli</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item"><a class="nav-link" href="/home/index">Anasayfa</a></li>
                    <li class="nav-item"><a class="nav-link" href="/home/Giris">Giriş Yap</a></li>

                    <!-- Kurum İşlemleri -->
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="kurumDropdown" data-bs-toggle="dropdown">Kurum İşlemleri</a>
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item" href="/home/kurum_ekle">Kurum Ekle</a></li>
                            <li><a class="dropdown-item" href="/home/kurum_listele">Kurum Listele</a></li>
                        </ul>
                    </li>

                    <!-- Personel İşlemleri -->
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="personelDropdown" data-bs-toggle="dropdown">Personel İşlemleri</a>
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item" href="/home/personel_ekle">Personel Ekle</a></li>
                            <li><a class="dropdown-item" href="/home/personel_listele">Personel Listele</a></li>
                        </ul>
                    </li>

                    <!-- Kart İşlemleri -->
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="kartDropdown" data-bs-toggle="dropdown">Kart İşlemleri</a>
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item" href="/home/kart_ekle">Kart Ekle</a></li>
                            <li><a class="dropdown-item" href="/home/kart_listesi">Kart Listele</a></li>
                        </ul>
                    </li>

                    <!-- İzin İşlemleri -->
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="izinDropdown" data-bs-toggle="dropdown">İzin İşlemleri</a>
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item" href="/home/izin_ekle">İzin Ekle</a></li>
                            <li><a class="dropdown-item" href="/home/izin_listele">İzin Listele</a></li>
                        </ul>
                    </li>

                    <!-- Görev İşlemleri -->
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="gorevDropdown" data-bs-toggle="dropdown">Görev İşlemleri</a>
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item" href="/home/gorev_ekle">Görev Ekle</a></li>
                            <li><a class="dropdown-item" href="/home/gorev_listele">Görev Listele</a></li>
                        </ul>
                    </li>

                    <li class="nav-item"><a class="nav-link" href="/settings/index">Ayarlar</a></li>
                    <li class="nav-item"><a class="nav-link" href="/privacy/index">Gizlilik Politikası</a></li>
                    <li class="nav-item"><a class="nav-link" href="/contact/index">İletişim</a></li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Sayfa içeriği -->
    <div class="container">
        @RenderBody()
    </div>

    <!-- Footer -->
    <footer>
        &copy; 2025 Personel Yönetim Sistemi
    </footer>

</body>
</html>
